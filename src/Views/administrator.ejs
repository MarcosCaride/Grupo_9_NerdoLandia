<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>

      <div class="titulo-section">
        <h2>Creación de Productos</h2>
      </div>
        
        <main class="mainAdmin">
           <form action="/productDetail" class="adminForm" method="POST" enctype="multipart/form-data">
<br>
  <!-- Nombre -->
              <label for="Nombre">Nombre del Producto</label>
<br>
                <input type="text" name="name" id="Nombre"> 
  <!-- Nombre -->
             
<br>
<br>

  <!-- Descripcion -->
                <label for="Descripcion">Ingersar descripción del producto</label>
            <br>
                <textarea name="descripcion" id="Descripcion" rows="4"></textarea>
  <!-- Descripcion -->

<br>
<br>

  <!-- Categoria -->

            <label>Ingresar la Franquicia</label>
<br>
            <select name="id_franchise" id="">
              <% franquicias.forEach(franquicia => { %>
                <option value="<%= franquicia.id %> "><%= franquicia.franchise_name %> </option>
              <% }) %>
            </select>

             
  <!-- Categoria -->

<br>
<br>

  <!-- Tags -->
            <label>Ingresa los Categorias</label>
            <br>
             <div class="radioInputs">
              <label><input type="checkbox" name="id_productsCategory" value="1">  Funko POP</label>
              <br>
                <label><input type="checkbox" name="id_productsCategory" value="2">  LEGO</label>
              <br>
                <label><input type="checkbox" name="id_productsCategory" value="3">  Accesorios</label>
              <br>
                <label><input type="checkbox" name="id_productsCategory" value="4">  Mochilas</label>
              <br>
                <label><input type="checkbox" name="id_productsCategory" value="5">  Remeras</label>
              <br>
                <label><input type="checkbox" name="id_productsCategory" value="6">  Figuras de Accion</label>
              <br>
                <label><input type="checkbox" name="id_productsCategory" value="7">  Heroínas</label>
              <br>
                <label><input type="checkbox" name="id_productsCategory" value="8">  Androide Del Mes</label>
              </div>
  <!-- Tags -->
           
<br>
<br>

  <!-- Imagen -->
            
            <label for="file">Imagen del producto</label>
<br>
            <div class="">
              <input type="file" alt="Submit" name="file" id="file">
            </div>

  <!-- Imagen -->
<br>
<br>
  <!-- Precio -->
            <label for="Precio">Ingresar Precio</label>
<br>
            <input type="number" name="precio"> 
          
  <!-- Precio -->
          
          <br>
          <br>
          <br>
             
             <button type="submit" value="Submit">Submit</button>
             <button type="reset" value="Reset">Reset</button>
             <br>
           </form>
         </main>

      <br>
      <br>
    <%- include('./partials/footer') %> 
  </body>
</html>
