<!DOCTYPE html> 
<html lang="en"> 
  <%- include('./partials/head') %>
<body> 

  <%- include('./partials/header') %>     
  
  
  <div class="carrito">
    <% for (product of marvel){%>
      <div class="carritoDetail">
        <a href="/detail/product/<%= product.id %>">
          <article>
            <img src="/Imagenes/products/<%= product.image %>" alt="<%= product.name %>">
            <div class="infoDelProducto">
              <p class="descripcion"><%= product.name %></p>
              <p class="precio">$<%= product.price %></p>
              <p class="precio"> Cantidad: 2</p>
            </div>
          </article>
        </a>
      </div>
      
      <% precioTotal = precioTotal + (product.price * 2) %> 
        <% } %>
        <div class="totalCarrito">
          <p class="descripcion">Precio Total <%= precioTotal %></p>
        </div>


  </div>
  
    <br> 
    <br> 
    <br>
    <br>
    <br>
  
    <%- include('./partials/footer') %> 
 
</body> 
</html>